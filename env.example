# =============================================================================
# vSphere Monitoring System - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# vSphere Configuration
# =============================================================================
# Your vCenter server URL (without https://)
VCENTER_URL=your-vcenter-server.com

# vCenter username (usually administrator@vsphere.local)
VCENTER_USER=administrator@vsphere.local

# vCenter password
VCENTER_PASSWORD=your-vcenter-password

# vCenter port (usually 443 for HTTPS)
VCENTER_PORT=443

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL password (change this to a secure password)
POSTGRES_PASSWORD=your_secure_database_password

# =============================================================================
# API Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Frontend Configuration
# =============================================================================
# API base URL for frontend (usually http://localhost:8000 for local development)
REACT_APP_API_BASE_URL=http://localhost:8000

# Assets directory
REACT_APP_ASSETS_DIR=/public/assets

# =============================================================================
# Terraform Configuration
# =============================================================================
# Path to Terraform binary (usually /usr/bin/terraform)
TERRAFORM_PATH=/usr/bin/terraform

# =============================================================================
# Optional: SSL Configuration
# =============================================================================
# Domain name for SSL certificate (if using Let's Encrypt)
DOMAIN_NAME=your-domain.com

# SSL certificate email (for Let's Encrypt)
SSL_EMAIL=admin@your-domain.com

# =============================================================================
# Optional: Monitoring Configuration
# =============================================================================
# Enable detailed logging
ENABLE_DEBUG_LOGGING=false

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# Optional: Security Configuration
# =============================================================================
# Secret key for JWT tokens (generate a random string)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60